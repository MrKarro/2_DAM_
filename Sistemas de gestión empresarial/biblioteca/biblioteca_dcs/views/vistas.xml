<odoo>
    <data>
        <record model="ir.ui.view" id="vista_biblioteca_libro_tree">
            <field name="name">vista_biblioteca_libro_tree</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <tree string="LISTADO">
                    <field name="name" />
                    <field name="date_release" />
                    <field name="pages" />
                    <field name="language" />
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="accion_biblioteca_libro_form">
             <field name="name">Catálogo de Libros</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">biblioteca.libro</field>
             <field name="view_mode">tree,form,kanban</field>
             <field name="help" type="html">
             <p class="oe_view_nocontent_create">
                Libros
             </p>
             <p>
                Haz clic en 'Crear' para insertar un libro.
             </p>
             </field>
         </record>

        <record id="vista_biblioteca_libro_form" model="ir.ui.view">
            <field name="name">vista_biblioteca_libro_form</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                 <form string="libro">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                                <field name="date_release"/>
                                <field name="pages"/>
                                <field name="language"/>
                                <field name="sumario"/>
                            </group>
                            <group name="group_right">
                                <field name="discontinued"/>
                                <field name="autor_ids"/>
                                <field name="imagen" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                 </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="accion_biblioteca_libro_form1">
