<odoo>
    <data>
        <record model="ir.ui.view" id="vista_carpinteria_Material_tree">
            <field name="name">vista_carpinteria_Material_tree</field>
            <field name="model">carpinteria.material</field>
            <field name="arch" type="xml">
                <tree string="LISTADO">
                    <field name="name" />
                    <field name="stock" />
                    <field name="precio" />
                    <field name="tipo" />
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="accion_carpinteria_Material_form">
             <field name="name">Catálogo de materiales</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">carpinteria.material</field>
             <field name="view_mode">tree,form,kanban</field>
             <field name="help" type="html">
             <p class="oe_view_nocontent_create">
                Materiales
             </p>
             <p>
                Haz clic en 'Crear' para insertar un material.
             </p>
             </field>
         </record>

        <record id="vista_carpinteria_Material_form" model="ir.ui.view">
            <field name="name">vista_carpinteria_Material_form</field>
            <field name="model">carpinteria.material</field>
            <field name="arch" type="xml">
                 <form string="material">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                                <field name="stock"/>
                                <field name="precio"/>
                                <field name="tipo"/>
                                <field name="disponible"/>
                            </group>
                            <group name="group_right">
                                <field name="imagen" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                 </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="accion_carpinteria_Material_form1">
            <field name="name">Catálogo de materiales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">carpinteria.material</field>
