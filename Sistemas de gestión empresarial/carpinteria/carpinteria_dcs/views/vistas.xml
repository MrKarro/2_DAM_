            <field name="res_model">carpinteria.producto</field>
            <field name="view_mode">kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Productos</p>
                <p>Haz clic en 'Crear' para añadir un producto.</p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="accion_carpinteria_producto_tree">
            <field name="name">Catálogo de productos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">carpinteria.producto</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Productos</p>
