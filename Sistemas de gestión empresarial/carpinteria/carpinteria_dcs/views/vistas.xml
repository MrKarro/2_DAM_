        <record model="ir.actions.act_window" id="accion_carpinteria_Material_formkanban">
             <field name="name">Catálogo de materiales</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">carpinteria.material</field>
             <field name="view_mode">kanban,form</field>
             <field name="help" type="html">
             <p class="oe_view_nocontent_create">
             materiales
             </p>
             <p>
             Haz clic en 'Crear' para añadir un material.
             </p>
             </field>
         </record>



        <record id="vista_carpinteria_Material_kanban" model="ir.ui.view">
            <field name="name">vista_carpinteria_Material_kanban</field>
            <field name="model">carpinteria.material</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="tipo"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Imagen"
                                         t-att-src="kanban_image('carpinteria.material', 'imagen', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="vista_carpinteria_producto_form" model="ir.ui.view">
            <field name="name">vista_carpinteria_producto_form</field>
            <field name="model">carpinteria.producto</field>
            <field name="arch" type="xml">
                <form string="Producto">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                                <field name="descripcion"/>
                                <field name="precio"/>
                                <field name ="material_id"/>

                            </group>
                            <group name="group_right">
                                <field name="logo_Producto" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="vista_carpinteria_producto_kanban" model="ir.ui.view">
            <field name="name">vista_carpinteria_producto_kanban</field>
            <field name="model">carpinteria.producto</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="descripcion"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="ImagenProducto" t-att-src="kanban_image('carpinteria.producto', 'logo_Producto', record.logo_producto)" />
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="vista_carpinteria_producto_tree" model="ir.ui.view">
            <field name="name">vista_carpinteria_producto_tree</field>
            <field name="model">carpinteria.producto</field>
